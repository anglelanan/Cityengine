Sidewalk -- >
	SidewalkGeometry
	SidewalkObjects

SidewalkObjects -- > 
	# 沿着道路纵向分割两边的和人行道
	split (v, unitSpace, 0) {streetDisk : NIL | placementWidth : PlacementStrip | ~1 : NIL}

PlacementStrip -- > 
	# 沿着人行道分割横向切割，切成小段
	split (u, unitSpace, 0) {}

