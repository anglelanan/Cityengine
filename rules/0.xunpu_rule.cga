# 需要定义的变量
# Shape_Level 建筑层数
# Roof_Style 屋顶形制类型编号

attr Shape_Level = 0
attr roof_style_1 = 30
attr roof_style_2 = 35
Floor_Level =  
	case Roof_Style == 1 : 6
	case Roof_Style == 2 : 5
	case Roof_Style == 3 : 4 //定义一层高度

# 建筑语言定义
Lot -- >
	exturde (height) Building
		height = Floor_Level + ( Shape_Level -1 ) * 4
	comp(f){ top : Roof | side : Wall}

